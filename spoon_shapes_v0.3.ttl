@prefix sh:   <http://www.w3.org/ns/shacl#> .
@prefix xsd:  <http://www.w3.org/2001/XMLSchema#> .
@prefix sp:   <http://example.org/spore/Spore001#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

# SHACL Shapes for Spoon Diversity Study v0.3

sp:ParticipantShape a sh:NodeShape ;
  sh:targetClass sp:Participant ;
  sh:property [
    sh:path sp:handSizeCm ;
    sh:minInclusive 0 ;
    sh:datatype xsd:decimal ;
  ] .

sp:ObservationShape a sh:NodeShape ;
  sh:targetClass sp:ToolUseObservation ;
  sh:property [
    sh:path sp:timeSeconds ;
    sh:minInclusive 0 ;
    sh:datatype xsd:decimal ;
  ] ;
  sh:property [
    sh:path sp:numOperations ;
    sh:minInclusive 0 ;
    sh:datatype xsd:integer ;
  ] ;
  sh:property [
    sh:path sp:errorRatePercent ;
    sh:minInclusive 0 ;
    sh:maxInclusive 100 ;
    sh:datatype xsd:decimal ;
  ] ;
  sh:property [
    sh:path sp:switchCount ;
    sh:minInclusive 0 ;
    sh:datatype xsd:integer ;
  ] ;
  sh:property [
    sh:path sp:switchTimeSeconds ;
    sh:minInclusive 0 ;
    sh:datatype xsd:decimal ;
  ] ;
  sh:property [
    sh:path sp:perceivedCognitiveCost ;
    sh:minInclusive 1 ;
    sh:maxInclusive 7 ;
    sh:datatype xsd:integer ;
  ] ;
  sh:property [
    sh:path sp:perceivedDiscomfort ;
    sh:minInclusive 1 ;
    sh:maxInclusive 7 ;
    sh:datatype xsd:integer ;
  ] .


